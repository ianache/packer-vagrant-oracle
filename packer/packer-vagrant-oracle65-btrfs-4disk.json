{
    "variables": {
        "ssh_name": "root",
        "ssh_pass": "root",
        "hostname": "vagrant-oracle65",
	"outputfile": "oracle65.box",
        "rootfs"  : "btrfs",
        "swapsize": "6000",
	"harddisk2_size": "32000",
	"harddisk3_size": "32000",
	"harddisk4_size": "32000",
        "yumurl"     : "http://192.168.56.1/stage/repo/OracleLinux/OL6/latest/x86_64",
	"repofile"   : "http://192.168.56.1/stage/vbox-yum-ol6.repo",
	"compression" : 6,
	"vagrantfile": "Vagrantfile"
    },

    "builders": [{
        "type": "virtualbox",
        "guest_os_type": "Oracle_64",
        "guest_additions_url": "",
        "guest_additions_sha256": "",
        "guest_additions_path": "",
	"guest_additions_mode": "upload",
	"output_directory": "output-{{user `hostname`}}",
        "vm_name": "packer-{{user `hostname`}}",

        "vboxmanage": [
           ["modifyvm", "{{.Name}}", "--vram", "32"],
           ["modifyvm", "{{.Name}}", "--memory", "4096"] ,
           ["modifyvm", "{{.Name}}", "--cpus", "2"] ,
	   ["storageattach", "{{.Name}}", "--storagectl", "IDE Controller", "--port", 0, "--device", 0, "--type", "dvddrive", "--medium", "x86_64-boot-uek.iso"],
           ["sharedfolder", "add", "{{.Name}}", "--name", "stagefiles", "--hostpath", "c:/packer_laptop/stagefiles", "--automount"],
           ["createhd", "--filename", "output-{{user `hostname`}}/packer-{{user `hostname`}}-disk2.vdi", "--size", "{{user `harddisk2_size`}}", "--format", "VDI", "--variant", "Standard"],
           ["storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "1", "--device", "0", "--type", "hdd", "--medium", "output-{{user `hostname`}}/packer-{{user `hostname`}}-disk2.vdi"],
           ["createhd", "--filename", "output-{{user `hostname`}}/packer-{{user `hostname`}}-disk3.vdi", "--size", "{{user `harddisk3_size`}}", "--format", "VDI", "--variant", "Standard"],
           ["storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "2", "--device", "0", "--type", "hdd", "--medium", "output-{{user `hostname`}}/packer-{{user `hostname`}}-disk3.vdi"],
           ["createhd", "--filename", "output-{{user `hostname`}}/packer-{{user `hostname`}}-disk4.vdi", "--size", "{{user `harddisk4_size`}}", "--format", "VDI", "--variant", "Standard"],
           ["storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "3", "--device", "0", "--type", "hdd", "--medium", "output-{{user `hostname`}}/packer-{{user `hostname`}}-disk4.vdi"]
	],

	"hard_drive_interface" : "sata",
	"disk_size": 26000,

	"headless" : 0,

        "iso_url": "OracleLinux-R6-U5-Server-x86_64-dvd.iso",
        "iso_checksum": "774fb999e4ed43341dcdf5ebc0d48f42",
        "iso_checksum_type": "md5",

        "http_directory" : "oracle65_http",
        "http_port_min" : 8080,
        "http_port_max" : 8082,

        "ssh_username": "{{user `ssh_name`}}",
        "ssh_password": "{{user `ssh_pass`}}",
        "ssh_wait_timeout": "20m",

        "shutdown_command": "shutdown -h now",
        "shutdown_timeout": "30m",

	"boot_wait": "5s",
        "boot_command" : [
            "<tab>",
            " text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg ",
            "HOSTNAME={{user `hostname`}} ",
            "SWAPSIZE={{user `swapsize`}} ",
            "ROOTFS={{user `rootfs`}} ",
            "YUM={{user `yumurl`}} ",
            "REPOFILE={{user `repofile`}} ",
            "<enter>"
        ]

    }],

  "provisioners"             : [{
    "type": "shell",
    "execute_command": "sh '{{ .Path }}'",
    "inline": [
      "REPOCOUNT=$(ls /etc/yum.repos.d/*repo | wc -l) ; [ $REPOCOUNT -lt 2 ] || yum update -y",
      "mkdir -p /media/dvd",
      "mount -o loop VBoxGuestAdditions*.iso /media/dvd",
      "sh /media/dvd/VBoxLinuxAdditions.run --nox11",
      "umount /media/dvd",
      "rm VBoxGuestAdditions*.iso",
      "useradd vagrant",
      "cp /etc/sudoers /etc/sudoers.orig",
      "sed -i -e 's/Defaults\\s*requiretty$/#Defaults\trequiretty/' /etc/sudoers",
      "sed -i -e '/# %wheel\tALL=(ALL)\tNOPASSWD: ALL/a %vagrant\tALL=(ALL)\tNOPASSWD: ALL' /etc/sudoers",
      "mkdir ~vagrant/.ssh",
      "chmod 700 ~vagrant/.ssh",
      "echo 'ssh-rsa  vagrant insecure public key' > ~vagrant/.ssh/authorized_keys",
      "chmod 600 ~vagrant/.ssh/authorized_keys",
      "chown -R vagrant: ~vagrant/.ssh",
      "cp /etc/ssh/sshd_config /etc/ssh/sshd_config.ori",
      "sed -i -e '/#UseDNS yes/a UseDNS no' /etc/ssh/sshd_config",
      "for nic in /etc/sysconfig/network-scripts/ifcfg-eth*; do sed -i /HWADDR/d $nic; done",
      "rm /etc/udev/rules.d/70-persistent-net.rules"
    ]
  },

  {
    "type": 		"shell",
    "execute_command":	"sh ''{{ .Path }}", 
    "script":		"stagefiles/sdb_u01_btrfs.sh"
  }],

  "post-processors": [
    {
      "type": "vagrant",
      "vagrantfile_template": "{{user `vagrantfile`}}",
      "only": ["virtualbox"],
      "keep_input_artifact": true,
      "output": "{{user `outputfile`}}",
      "compression_level": "{{user `compression`}}"
    }
  ]
}

